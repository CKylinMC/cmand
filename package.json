{
  "name": "cmand",
  "version": "0.1.0",
  "description": "A simple command-line tool for Windows managing your small scripts.",
  "main": "build/main/index.js",
  "bin": {
    "cmand": "build/main/index.js"
  },
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/CKylinMC/cmand",
  "license": "MIT",
  "keywords": [
    "cli",
    "windows",
    "commands"
  ],
  "scripts": {
    "premakepack": "npm run build",
    "makepack": "pkg package.json",
    "build": "tsc -p tsconfig.json"
  },
  "pkg": {
    "scripts": "build/main/**/*.js",
    "targets": [
      "win"
    ],
    "outputPath": "dist"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@bitauth/libauth": "^1.17.1",
    "@pnpm/os.env.path-extender": "^0.2.4",
    "@pnpm/os.env.path-extender-windows": "^0.2.1",
    "@types/inquirer": "^8.2.1",
    "chalk": "^4.1.2",
    "cli-highlight": "^2.1.11",
    "commander": "^9.4.0",
    "homedir": "^0.6.0",
    "inquirer": "^8.0.0",
    "nestdb": "^2.0.0",
    "pkg": "^5.8.0",
    "sudo-prompt": "^9.2.1"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "ava": "^3.12.1",
    "codecov": "^3.5.0",
    "cspell": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^3.0.2",
    "eslint-plugin-import": "^2.22.0",
    "gh-pages": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "open-cli": "^6.0.1",
    "prettier": "^2.1.1",
    "standard-version": "^9.0.0",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.0",
    "typescript": "^4.0.2"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "typescript": {
      "rewritePaths": {
        "src/": "build/main/"
      }
    },
    "files": [
      "!build/module/**"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
